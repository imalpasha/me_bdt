<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" >
    <TableLayout
        android:id="@+id/discountTableLayout"
        android:stretchColumns="1,2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <com.metech.tbd.utils.PlayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Charges"
                android:textColor="@color/white"
                android:background="@color/title"
                android:id="@+id/textView421"
                android:padding="10dp"
                android:layout_span="4"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow0"
            android:padding="20px">

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Fare "
                android:id="@+id/textView"
                android:layout_column="0"
                android:textSize="15dp"/>

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discount10dEditText"
                android:text="8,000 pts"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_span="2"
                android:textSize="15dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow2"
            android:padding="20px">

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Ons"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:textSize="15dp" />

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discount10EditText"
                android:text="2,000 pts"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_span="2"
                android:textSize="15dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow3"
            android:padding="20px">

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total10EditText"
                android:text="10,000 pts"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_span="2"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </TableRow>
        <TableRow>
            <com.metech.tbd.utils.PlayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Due"
                android:textColor="@color/white"
                android:background="@color/title"
                android:id="@+id/textView441"
                android:padding="10dp"
                android:layout_span="4"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow0t"
            android:padding="20px">

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIG Points "
                android:layout_column="0"
                android:textSize="15dp"/>

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBigPoint"
                android:layout_column="1"
                android:text="8500 pts"
                android:layout_gravity="right"
                android:layout_span="3"
                android:textSize="15dp"
                android:paddingRight="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow2r"
            android:padding="20px">

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringgit Malaysia"
                android:id="@+id/textView5t"
                android:layout_column="0"
                android:textSize="15dp" />

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDiscount"
                android:text="854.00 MYR"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_span="3"
                android:textSize="15dp"
                android:paddingRight="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow78"
            android:padding="20px">

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing Fee"
                android:id="@+id/textView66"
                android:layout_column="0"
                android:textSize="15dp"/>

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total10EditTextt"
                android:text="24.00 MYR"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_span="3"
                android:paddingRight="20dp"
                android:textSize="15dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow9"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp">

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:id="@+id/textView26"
                android:layout_column="0"
                android:layout_span="2"
                android:paddingLeft="10dp"
                android:textSize="15dp"/>

            <com.metech.tbd.utils.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total11EditText"
                android:text="max"
                android:gravity="center"
                android:layout_column="3"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:textSize="15dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow4">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customSeekBar"
                android:progress="50"
                android:indeterminate="false"
                android:paddingBottom="10dp"
                android:layout_column="0"
                android:layout_span="4" />
        </TableRow>
        <TableRow>
            <com.metech.tbd.utils.PlayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay >"
                android:textColor="@color/white"
                android:background="@color/button_pay"
                android:id="@+id/btnPay"
                android:padding="10dp"
                android:gravity="center"
                android:layout_span="4"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </TableRow>
    </TableLayout>
</ScrollView>
