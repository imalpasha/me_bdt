<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" >
    <TableLayout
        android:id="@+id/discountTableLayout"
        android:stretchColumns="1,2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <com.metech.tbd.utils.FontStyle.PlayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Your Credit Card"
                android:textColor="@color/white"
                android:background="@color/title"
                android:id="@+id/textView421"
                android:padding="10dp"
                android:layout_span="4"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow0"
            android:padding="20px"
            android:background="@color/field">

            <com.metech.tbd.utils.FontStyle.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MasterCard"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textSize="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"/>

            <com.metech.tbd.utils.FontStyle.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discount10dEditText"
                android:text="**** **** **** 0123"
                android:layout_column="1"
                android:layout_span="2"
                android:textSize="15dp"
                android:paddingRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/redtick"
                android:scaleType="centerCrop"
                android:paddingRight="20dp"/>
        </TableRow>
        <TableRow>
            <com.metech.tbd.utils.FontStyle.PlayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed >"
                android:textColor="@color/white"
                android:background="@color/button_pay"
                android:id="@+id/btnProceedMSOS"
                android:padding="10dp"
                android:gravity="center"
                android:layout_span="4"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow0t"
            android:padding="30px"
            android:background="@drawable/drawable_login_bottom_border">

            <com.metech.tbd.utils.FontStyle.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visa "
                android:id="@+id/textVieww"
                android:layout_column="0"
                android:textSize="15dp"/>

            <com.metech.tbd.utils.FontStyle.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discount10EdiatText"
                android:text="**** **** **** 0456"
                android:layout_column="1"
                android:layout_span="3"
                android:textSize="15dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <com.metech.tbd.utils.FontStyle.PlayTextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*You may add new credit card at your profile page"
            android:textStyle="italic"
            android:textColor="@color/grey"
            android:id="@+id/textVsieww"
            android:layout_marginTop="20dp"
            android:textSize="15dp" />
    </TableLayout>
</ScrollView>
