<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/red" />
            <gradient android:angle="-90" android:endColor="#f26e5a" android:startColor="#f48371" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/red" />
            <gradient android:angle="-90" android:endColor="@color/red" android:startColor="@color/red" />
        </shape>
    </item>

</selector>

